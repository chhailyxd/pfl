---
const experiences = [
  {
    title: "Senior Frontend Developer",
    company: "TechCorp Inc.",
    period: "2022 - Present",
    description: "Leading a team of 5 developers in building a modern SaaS platform. Implemented performance optimizations that improved load time by 40%. Established coding standards and review processes."
  },
  {
    title: "Full Stack Developer",
    company: "WebSolutions Ltd.",
    period: "2019 - 2022",
    description: "Developed and maintained multiple client projects using React, Node.js, and PostgreSQL. Collaborated with UX designers to implement responsive interfaces. Reduced server costs by 30% through infrastructure optimizations."
  },
  {
    title: "Junior Developer",
    company: "StartupHub",
    period: "2017 - 2019",
    description: "Started as an intern and grew into a full-time role. Worked on frontend components using Vue.js. Participated in daily stand-ups and sprint planning. Gained valuable experience in agile methodology."
  }
]
---

<section id="experience" class="experience-section">
  <div class="container">
    <h2 class="section-title fade-in">Work Experience</h2>
    <div class="timeline">
      {experiences.map((exp, index) => (
        <div class={`timeline-item fade-in delay-${index * 100}`}>
          <div class="timeline-dot"></div>
          <div class="timeline-content">
            <div class="timeline-header">
              <h3>{exp.title}</h3>
              <span class="company">{exp.company}</span>
              <span class="period">{exp.period}</span>
            </div>
            <p>{exp.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .experience-section {
    background-color: var(--card-bg);
  }

  .timeline {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
    padding-left: 30px;
  }

  .timeline::before {
    content: "";
    position: absolute;
    width: 2px;
    background-color: var(--primary-color);
    top: 0;
    bottom: 0;
    left: 0;
  }

  .timeline-item {
    position: relative;
    margin-bottom: 2.5rem;
  }

  .timeline-item:last-child {
    margin-bottom: 0;
  }

  .timeline-dot {
    position: absolute;
    width: 16px;
    height: 16px;
    background-color: var(--primary-color);
    border-radius: 50%;
    left: -38px;
    top: 5px;
    box-shadow: 0 0 0 4px var(--highlight);
  }

  .timeline-content {
    background-color: var(--background-color);
    padding: 1.5rem;
    border-radius: 8px;
    box-shadow: 0 3px 8px rgba(0, 0, 0, 0.05);
    position: relative;
  }

  .timeline-content::before {
    content: "";
    position: absolute;
    border-style: solid;
    border-width: 10px 10px 10px 0;
    border-color: transparent var(--background-color) transparent transparent;
    left: -10px;
    top: 10px;
  }

  .timeline-header {
    margin-bottom: 1rem;
  }

  .timeline-header h3 {
    margin-bottom: 0.25rem;
    color: var(--text-color);
  }

  .company {
    display: block;
    font-weight: 500;
    color: var(--primary-color);
    margin-bottom: 0.25rem;
  }

  .period {
    display: block;
    font-size: 0.85rem;
    color: var(--light-text-color);
    margin-bottom: 0.5rem;
  }

  @media (max-width: 768px) {
    .timeline {
      padding-left: 20px;
    }

    .timeline-dot {
      left: -29px;
      width: 12px;
      height: 12px;
    }
  }
</style>